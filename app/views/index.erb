<div class="container">
  <div class="center_contents">
    <h1>Welcome to JAVASCRIPT RACER!</h1>

    <form action="/race" method="POST">
      Player 1:
      <select name="player_ids[]">
        <% @players.each do |player| %>
        <option value="<%= player.id %>"><%= player.name %></option>
        <% end %>
      </select>
      <br>
      <br>
      Player 2:
      <select name="player_ids[]">
        <% @players.each do |player| %>
        <option value="<%= player.id %>"><%= player.name %></option>
        <% end %>
      </select>
      <br>
      <br>
      <input type="submit" value="Race!">
    </form>

    <br>

    <% if @errors %>
    <div>
      <% @errors.full_messages.each do | message | %>
        <p style="color:red"><%= message %></p>
      <% end %>
    </div>
    <% end %>

    <a href="/register"><button>Register New Player</button></a>
  </div>
</div>

